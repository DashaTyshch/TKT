<Window x:Class="ATM_TKT.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_TKT"
        mc:Ignorable="d"
        Title="LoginPage" Height="300" Width="300" 
               FontSize="14" Background="Gray">
    <StackPanel Margin="20">
        <Button Name="SignUp" Click="btnSignUp_Click" Height="35" Margin="180,0,0,0">Sign up</Button>
        <Label Foreground="White" Margin="0,25,0,0">Phone number</Label>
        <TextBox Name="UserPhoneNumber"></TextBox>
        <Label Foreground="White">Password</Label>
        <PasswordBox Name="UserPassword"></PasswordBox>
        <Button x:Name="Login" Click="btnLogin_Click"  Content="Login" Height="35" Margin="180,20,0,0"/>
    </StackPanel>
</Window>
