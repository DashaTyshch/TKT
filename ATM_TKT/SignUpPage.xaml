<Window x:Class="ATM_TKT.SignUpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_TKT"
        mc:Ignorable="d"
        Title="SignUpPage" Height="400" Width="300"
               FontSize="14" Background="Bisque">
    <StackPanel Margin="20">
        <Label Foreground="Gray" FontSize="14" Margin="0,25,0,0">Name</Label>
        <TextBox Name="UserName"></TextBox>
        <Label Foreground="Gray">Surname</Label>
        <TextBox Name="UserSurname"></TextBox>
        <Label Foreground="Gray">PhoneNumber</Label>
        <TextBox Name="UserPhoneNumber"></TextBox>
        <Label Foreground="Gray">Password</Label>
        <PasswordBox Name="UserPassword"></PasswordBox>
        <Label Foreground="Gray">Password repeat</Label>
        <PasswordBox Name="UserPasswordRepeat"></PasswordBox>
        <Button x:Name="Login" Click="btnSignUp_Click"  Content="Sign up" Height="35" Margin="180,15,0,0"/>
    </StackPanel>
</Window>
